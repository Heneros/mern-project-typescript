{
  "version": 2,
  "installCommand": "npm ci",
  "buildCommand": "npm run vercel-build",
  "devCommand": "npm run server:dev",
  "builds": [
    {
      "src": "dist/backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/backend/**",
          ".env"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/backend/server.js"
    }
  ]
}