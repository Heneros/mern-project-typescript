{
    "presets": [
        "@babel/preset-env",
        "@babel/preset-react",
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": [
                    "./src"
                ],
                "alias": {
                    "app": "./app",
                    "entities": "./entities",
                    "features": "./features",
                    "pages": "./pages",
                    "shared": "./shared",
                    "widgets": "./widgets",
                    "components": "./components"
                }
            }
        ]
    ]
}