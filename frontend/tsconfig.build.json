{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "composite": false,
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "isolatedModules": false,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "../dist/frontend",
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "removeComments": true,
        "baseUrl": "src",
        "rootDir": ".",
        "paths": {
            "app/*": [
                "app/*"
            ],
            "entities/*": [
                "entities/*"
            ],
            "features/*": [
                "features/*"
            ],
            "pages/*": [
                "pages/*"
            ],
            "shared/*": [
                "shared/*"
            ],
            "widgets/*": [
                "widgets/*"
            ],
            "components/*": [
                "components/*"
            ]
        },
    },
    "include": [
        "src/**/*",
        "src/declarations.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.*",
        "**/*.spec.*"
    ]
}