{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "composite": false,
        "strict": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "isolatedModules": false,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "outDir": "../dist/frontend",
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "removeComments": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.*",
        "**/*.spec.*"
    ]
}