{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "outDir": "./dist/backend",
    
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "inlineSources": false,
    "typeRoots": [
      "./node_modules/@types",
      "./backend/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "backend/*"
      ],
      "config/*": [
        "backend/config/*"
      ],
      "constants/*": [
        "backend/constants/*"
      ],
      "controllers/*": [
        "backend/controllers/*"
      ],
      "helpers/*": [
        "backend/helpers/*"
      ],
      "middleware/*": [
        "backend/middleware/*"
      ],
      "models/*": [
        "backend/models/*"
      ],
      "routes/*": [
        "backend/routes/*"
      ],
      "types/*": [
        "backend/types/*"
      ],
      "utils/*": [
        "backend/utils/*"
      ]
    }
  },
  "include": [
    "backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}