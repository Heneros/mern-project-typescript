{
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "module": "CommonJS",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowJs": false,
    "baseUrl": ".",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": false,
    "paths": {
      "@/*": [
        "backend/*"
      ],
      "config/*": [
        "backend/config/*"
      ],
      "constants/*": [
        "backend/constants/*"
      ],
      "controllers/*": [
        "backend/controllers/*"
      ],
      "helpers/*": [
        "backend/helpers/*"
      ],
      "middleware/*": [
        "backend/middleware/*"
      ],
      "models/*": [
        "backend/models/*"
      ],
      "routes/*": [
        "backend/routes/*"
      ],
      "types/*": [
        "backend/types/*"
      ],
      "utils/*": [
        "backend/utils/*"
      ],
      "server": [
        "backend/server.ts"
      ]
    }
  },
  "ts-node": {},
  "references": [
    {
      "path": "./frontend/tsconfig.json"
    }
  ],
  "include": [
    "frontend/src/**/*.tsx",
    "frontend/src/**/*.ts",
    "frontend/src/declarations.d.ts",
    "frontend/webpack.config.js",
    "backend/**/*.ts",
  ],
  "exclude": [
    "node_modules/",
    ".eslintrc.js",
    "./frontend/node_modules/"
  ]
}