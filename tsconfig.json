{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "allowJs": false,
    "baseUrl": "./",
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types",
      "./backend/types/*.d.ts",
      "backend/types/*.d.ts"
    ],
    "types": [
      "node",
      "jest",
      "express"
    ],
    "composite": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "backend/*"
      ],
      "config/*": [
        "./config/*"
      ],
      "constants/*": [
        "./constants/*"
      ],
      "controllers/*": [
        "./controllers/*"
      ],
      "helpers/*": [
        "./helpers/*"
      ],
      "middleware/*": [
        "./middleware/*"
      ],
      "models/*": [
        "./models/*"
      ],
      "routes/*": [
        "./routes/*"
      ],
      "types/*": [
        "./types/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "server": [
        "./server.ts"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
    }
  },
  "ts-node": {},
  "references": [
    {
      "path": "./frontend/tsconfig.json"
    }
  ],
  "include": [
    "frontend/src/**/*.tsx",
    "frontend/src/**/*.ts",
    "seed/**/*.ts",
    "test/**/*.ts",
    "frontend/src/declarations.d.ts",
    "frontend/webpack.config.js",
    "backend/**/*.ts",
    "backend/types/types.d.ts",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules/",
    ".eslintrc.js",
    "./frontend/node_modules/"
  ]
}